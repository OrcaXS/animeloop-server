<%
 let episode = data.episode;
 let loops = data.loops;

 let episodeTitle = episode.series.title;
 if (episode.no) {
   episodeTitle += ` ${episode.no}`;
 }
 %>

<!DOCTYPE html>
<html lang="en">
<head>
  <title><%- episodeTitle %> | Episode | Animeloop</title>
  <%- include('partials/head') %>
</head>

<body id="mimin" class="dashboard">

<!-- start: Header -->
<%- include('partials/header') %>
<!-- end: Header -->

<div class="container-fluid mimin-wrapper">
  <!-- start:Left Menu -->
  <%- include('partials/menu') %>
  <!-- end: Left Menu -->

  <!-- start: content -->
  <div id="content">
    <div class="panel">
      <div class="panel-body">
        <% if (loops.length >= 1) { %>
        <ol class="breadcrumb path-navigator">
          <li><a href="/series/<%- loops[0].series._id %>"><%- loops[0].series.title %></a></li>
          <li class="active"><%- episodeTitle %></li>
        </ol>
        <h3><%- episodeTitle %></h3>
        <% } %>
      </div>
    </div>

    <div class="loop-cards">
      <% loops.forEach((loop) => { %>
      <%- include('partials/loop-card', {
      loop
      }) %>
      <% }); %>
    </div>

    <div class="col-xs-12 col-md-12">
      <div class="episode comment panel">
        <div class="panel-body">
          <div class="col-md-12">
            <%- include('partials/disqus') %>
          </div>
        </div>
      </div>
    </div>

  </div>
  <!-- end: content -->

</div>

<!-- start: Mobile -->
<%- include('partials/mobile-menu') %>
<!-- end: Mobile -->

<!-- start: Javascript -->
<%- include('partials/scripts') %>
<!-- end: Javascript -->
</body>
</html>