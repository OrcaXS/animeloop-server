<%
let episodes = data.episodes;
let series = data.series;
%>
<!DOCTYPE html>
<html lang="en">
<head>
  <title><%- data.series.title %> | Series | Animeloop</title>
  <%- include('partials/head') %>
</head>

<body id="mimin" class="dashboard">

<!-- start: Header -->
<%- include('partials/header') %>
<!-- end: Header -->

<div class="container-fluid mimin-wrapper">
  <!-- start:Left Menu -->
  <%- include('partials/menu') %>
  <!-- end: Left Menu -->

  <!-- start: content -->
  <div id="content">
    <div class="panel series">
      <div class="panel-body">
        <div class="col-md-4 col-sm-6 col-xs-12">
          <img class="cover" src="<%- series.image_url_large %>">
        </div>
        <div class="col-md-8">
          <h3 class="title"><%- series.title %>
          <% if (series.title_japanese) { %>
          <small>（<%- series.title_japanese %> ）</small>
          <% } %>
          <% if (series.title_japanese) { %>
          <br>
          <small><%- series.title_english %></small>
          <% } %>
          </h3>

          <ul class="genres">
            <% series.genres.forEach((gen) => { %>
            <li><%- gen %></li>
            <% }); %>
          </ul>

          <div class="description"><%- series.description %></div>
        </div>
      </div>
    </div>

    <div class="panel">
      <div class="panel-body">
        <%
        var i, j, temps, chunk = 3;
        for (i = 0, j = episodes.length; i < j; i += chunk) {
          temps = episodes.slice(i, i+chunk);
        %>
        <div class="col-md-12">
          <div class="col-md-1">
          </div>
          <% temps.forEach((temp) => { %>
          <div class="col-md-3">
            <a href="/episode/<%- temp._id %>"><%- `${temp.series.title} ${temp.no}` %></a>
          </div>
          <% }); %>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <!-- end: content -->

</div>

<!-- start: Mobile -->
<%- include('partials/mobile-menu') %>
<!-- end: Mobile -->

<!-- start: Javascript -->
<%- include('partials/scripts') %>
<!-- end: Javascript -->
</body>
</html>