<!DOCTYPE html>
<html>
<head>
  <title><%= __('status') %> | Animeloop</title>

  <%- include('partials/head') %>

  <meta name="application-name" content="netdata">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

</head>

<body id="mimin" class="dashboard">

<!-- start: Header -->
<%- include('partials/header') %>
<!-- end: Header -->

<div class="container-fluid mimin-wrapper">
  <!-- start:Left Menu -->
  <%- include('partials/menu') %>
  <!-- end: Left Menu -->

  <style>
    h3 {
      margin: 4rem;
    }
    table {
      text-align: right;
    }
    table th {
      text-align: right;
    }
  </style>

  <!-- start: content -->
  <div id="content">
    <div class="panel">
      <div class="panel-body" style="margin: 0 auto; text-align: center;">
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-10">
            <div class="system-status">
              <h3>System Overview</h3>
              <div class="overview">
                <div data-netdata="system.swap"
                     data-dimensions="used"
                     data-append-options="percentage"
                     data-chart-library="easypiechart"
                     data-title="Used Swap"
                     data-units="%"
                     data-easypiechart-max-value="100"
                     data-width="9%"
                     data-before="0"
                     data-after="-360"
                     data-points="360"
                     data-colors="#DD4400"
                     role="application"></div>

                <div data-netdata="system.io"
                     data-dimensions="in"
                     data-chart-library="easypiechart"
                     data-title="Disk Read"
                     data-width="11%"
                     data-before="0"
                     data-after="-360"
                     data-points="360"
                     role="application"></div>

                <div data-netdata="system.io"
                     data-dimensions="out"
                     data-chart-library="easypiechart"
                     data-title="Disk Write"
                     data-width="11%"
                     data-before="0"
                     data-after="-360"
                     data-points="360"
                     role="application"></div>

                <div data-netdata="system.cpu"
                     data-chart-library="gauge"
                     data-title="CPU"
                     data-units="%"
                     data-gauge-max-value="100"
                     data-width="20%"
                     data-after="-360"
                     data-points="360"
                     data-colors="#22AA99"
                     role="application"></div>

                <div data-netdata="system.ipv4"
                     data-dimensions="received"
                     data-chart-library="easypiechart"
                     data-title="IPv4 Inbound"
                     data-width="11%"
                     data-before="0"
                     data-after="-360"
                     data-points="360"
                     role="application"></div>

                <div data-netdata="system.ipv4"
                     data-dimensions="sent"
                     data-chart-library="easypiechart"
                     data-title="IPv4 Outbound"
                     data-width="11%"
                     data-before="0"
                     data-after="-360"
                     data-points="360"
                     role="application"></div>

                <div data-netdata="system.ram"
                     data-dimensions="used|buffers|active|wired"
                     data-append-options="percentage"
                     data-chart-library="easypiechart"
                     data-title="Used RAM"
                     data-units="%"
                     data-easypiechart-max-value="100"
                     data-width="9%" data-after="-360"
                     data-points="360"
                     data-colors="#EE9911"
                     role="application"></div>
              </div>
            </div>
            <div class="cpu">
              <h3>CPU</h3>
              <div data-netdata="services.cpu"
                   data-width="100%"
                   data-height="180px"
                   data-dygraph-valuerange="[null, null]"
                   data-before="0" data-after="-360"
                   data-id="tomori_services_cpu"
                   data-colors="" role="application"
                   style="width: 100%; height: 180px;"></div>
            </div>
            <div class="ram">
              <h3>RAM</h3>
              <div data-netdata="system.ram"
                   data-width="100%"
                   data-height="180px"
                   data-dygraph-valuerange="[null, null]"
                   data-before="0"
                   data-after="-360"
                   data-id="tomori_system_ram"
                   data-colors=""
                   role="application"></div>
              </div>
            <div class="network">
              <h3>Network</h3>
              <div data-netdata="net.ens3"
                   data-width="100%"
                   data-height="180px"
                   data-dygraph-valuerange="[null, null]"
                   data-before="0"
                   data-after="-360"
                   data-id="tomori_net_ens3"
                   data-colors=""
                   role="application"></div>
            </div>
            <div class="mongodb">
              <h3>MongoDB</h3>
              <div data-netdata="mongodb_local.read_operations"
                   data-width="100%"
                   data-height="180px"
                   data-dygraph-valuerange="[null, null]"
                   data-before="0"
                   data-after="-420"
                   data-id="tomori_mongodb_local_read_operations"
                   data-colors=""
                   role="application"></div>
              <div data-netdata="mongodb_local.write_operations"
                   data-width="100%"
                   data-height="180px"
                   data-dygraph-valuerange="[null, null]"
                   data-before="0"
                   data-after="-420"
                   data-id="tomori_mongodb_local_write_operations"
                   data-colors=""
                   role="application"></div>
            </div>
            <div class="database-status">
              <h3>Database Statistics</h3>
              <table class="table table-bordered table-responsive table-striped">
                <tr>
                  <th></th>
                  <th>SERIES</th>
                  <th>EPISODES</th>
                  <th>LOOPS</th>
                </tr>
                <tr>
                  <td>COUNT</td>
                  <td><%- status.seriesCount %></td>
                  <td><%- status.episodesCount %></td>
                  <td><%- status.loopsCount %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- end: content -->
</div>

<!-- start: Mobile -->
<%- include('partials/mobile-menu') %>
<!-- end: Mobile -->

<script>
  var netdataTheme = 'default'; // this is white
  var netdataServer = 'https://animeloop.org/netdata/';
  var netdataNoBootstrap = true;
</script>
<script type="text/javascript" src="https://animeloop.org/netdata/dashboard.js"></script>
<script>
  NETDATA.options.current.destroy_on_hide = false;
  NETDATA.options.current.eliminate_zero_dimensions = true;
  NETDATA.options.current.concurrent_refreshes = false;
  NETDATA.options.current.parallel_refresher = true;
</script>

<!-- start: Javascript -->
<%- include('partials/scripts') %>
<!-- end: Javascript -->
</body>
</html>